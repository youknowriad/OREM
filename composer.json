{
    "name": "rizeway/orem",
    "type": "library",
    "license": "MIT",
    "description": "Rizeway OREM is a Restful API Abstraction Layer. It is to Restful APIs what doctrine is for databases.",
    "keywords": ["rest", "php", "ORM", "API"],
    "authors": [
        {
            "name": "Riad Benguella",
            "email": "riad@rizeway.com",
            "homepage": "http://riadbenguella.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "Rizeway\\OREM": "src/"
        }
    },
    "require": {
        "php":               ">=5.5.0",
        "symfony/yaml":      "2.*",
        "symfony/finder":    "2.*",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "atoum/atoum": "~2.2"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
